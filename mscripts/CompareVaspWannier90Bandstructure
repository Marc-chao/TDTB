#!/usr/local/bin/MathematicaScript -script
<<dftanalysis`;
If[Length[$ScriptCommandLine]==4,
	{wannier90file,outcarfile,eigenvalfile}=$ScriptCommandLine[[2;;]];
	If[FileExistsQ[wannier90file]&&FileExistsQ[outcarfile]&&FileExistsQ[eigenvalfile],
		Export["compare_bandstructure.png",ListPlot[CompareVaspWannier90Bandstructure[wannier90file,outcarfile,eigenvalfile]],ImageSize->1000];
		Run["display bandstructure.png"]
	,
		Print["One of the supplied files was not found!"]
	]
,
	Print["Usage: CompareVaspWannier90Bandstructure /path/to/wannier90_hr.dat /path/to/OUTCAR /path/to/EIGENVAL"];
]
